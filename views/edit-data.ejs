<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Mahasiswa</h2>

            <% if (!mhs) { %>
                <div class="alert alert-danger mt-3" role="alert">
                    Data mahasiswa tidak ada
                    <br> 
                    <a href="/data" class="alert-link">
                        &laquo; kembali ke halaman data mahasiswa
                    </a>.
                </div>
            <% } else { %>
                
                <% if (typeof errors !== 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
    
                <form class="mt-3" method="post" action="/data/update">
                    <!-- gunakan salah satu untuk mengecek old NIM -->
                    <!-- <input type="hidden" name="oldNim" value="<%= // (mhs.oldNim) ? mhs.oldNim : mhs.nim %>"> -->
                    <input type="hidden" name="oldNim" value="<%= mhs.oldNim || mhs.nim %>">

                    <!-- <input type="hidden" name="oldEmail" value="<%= // (mhs.oldEmail) ? mhs.oldEmail : mhs.email %>"> -->
                    <input type="hidden" name="oldEmail" value="<%= mhs.oldEmail || mhs.email %>">

                    <div class="mb-3">
                        <label for="nim" class="form-label">Nomor Induk Mahasiswa</label>
                        <input type="text" class="form-control" id="nim" name="nim" value="<%= mhs.nim %>" required autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label for="nama" class="form-label">Nama Mahasiswa</label>
                        <input type="text" class="form-control" id="nama" name="nama" value="<%= mhs.nama %>" required autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= mhs.email %>" required autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label for="prodi" class="form-label">Program Studi</label>
                        <input type="text" class="form-control" id="prodi" name="prodi" value="<%= mhs.prodi %>" required autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <label for="tahunMasuk" class="form-label">Tahun Masuk</label>
                        <input type="text" class="form-control" id="tahunMasuk" name="tahunMasuk" value="<%= mhs.tahunMasuk%>" required autocomplete="off">
                    </div>
                    <button type="submit" class="btn btn-primary">Edit Data</button>
                </form>
            <% } %>

        </div>
    </div>
    <br>
    <a href="/data" class="card-link">&laquo; kembali ke halaman data mahasiswa</a>
</div>
<br><br><br>