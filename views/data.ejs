<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Data Mahasiswa</h2>

            <table class="table mt-3">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">NIM</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (mahasiswa.length == 0) { %>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-danger mt-3" role="alert">
                          tidak ada data mahasiswa
                        </div>
                      </td>
                    </tr>
                  <% } %>
                  <% mahasiswa.forEach((mhs, i)=> { i++ %>
                    <tr>
                      <th scope="row"><%= i++ %></th>
                      <td><%= mhs.nim %></td>
                      <td><%= mhs.nama %></td>
                      <td>
                          <a href="/data/<%= mhs.nim %>" class="btn btn-success badge rounded-pill">detail</a>
                      </td>
                    </tr>
                  <% }) %>
                  
                </tbody>
              </table>
        </div>
    </div>
</div>